<?xml version="1.0" encoding="utf-8"?>
<org.lasque.tusdkvideodemo.views.MagicEffectLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- timeline view  -->
    <org.lasque.tusdkvideodemo.views.MagicEffectsTimelineView
        android:id="@+id/lsq_magic_effect_timelineView"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginBottom="@dimen/lsq__space_20"
        android:layout_above="@+id/lsq_magic_effect_list_view"/>

    <!-- 魔法特效列表 -->
    <org.lasque.tusdkvideodemo.views.MagicEffectListView
        android:id="@+id/lsq_magic_effect_list_view"
        android:layout_width = "match_parent"
        android:layout_height = "80dp"
        android:layout_marginBottom="@dimen/lsq__space_10"
        android:layout_alignParentBottom="true"/>

</org.lasque.tusdkvideodemo.views.MagicEffectLayout>