<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" 
    android:background="@color/lsq_color_white">
	
    <include
       layout="@layout/title_item_layout"/> 
       
	<SurfaceView 
	    android:id="@+id/lsq_movie_mixer_preview"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"/>
	
	<include
        android:id="@+id/lsq_voice_volume_config_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        layout="@layout/tusdk_config_view" 
        />  
	
	<Button
	   android:id="@+id/lsq_movie_mixer_start"
       android:layout_width="200dp"
       android:layout_height="30dp"
       android:layout_marginTop="20dp"
       android:textColor="@color/lsq_color_white"
       android:background="@color/lsq_color_api_button"
       android:text="@string/lsq_movie_mixer_start"/>
	
</LinearLayout>
