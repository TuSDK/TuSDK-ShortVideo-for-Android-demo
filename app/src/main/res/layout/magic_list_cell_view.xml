<?xml version="1.0" encoding="utf-8"?>
<org.lasque.tusdkvideodemo.views.MagicEffectCellView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="65dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/lsq__space_12">

    <!-- 第一种类型布局 -->
    <RelativeLayout
        android:id="@+id/lsq_border_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tusdk_view_dubbing_roundcorner_none_bg">
        <org.lasque.tusdk.core.view.TuSdkImageView
            android:id="@+id/lsq_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/lsq_item_title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/tusdk_view_filter_unselected_text_roundcorner"
        android:gravity="center"
        android:textColor="@color/lsq_color_white"
        android:textSize="12sp" />


    <View
        android:id="@+id/lsq_item_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tusdk_view_filter_selected_border"
        android:visibility="gone"
        />

    </RelativeLayout>

    <!-- 第二种类型布局 -->
    <org.lasque.tusdk.core.view.widget.button.TuSdkTextButton
        android:id="@+id/lsq_magic_effect_cell_undo_btn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:drawableTop="@drawable/edit_ic_back"
        android:textSize="12sp"
        android:textColor="@color/lsq_filter_title_color"
        android:text="@string/lsq_repeal"/>

</org.lasque.tusdkvideodemo.views.MagicEffectCellView>