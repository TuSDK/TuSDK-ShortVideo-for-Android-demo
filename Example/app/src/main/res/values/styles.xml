<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lsq_color_white</item>
        <item name="colorPrimaryDark">@color/lsq_color_white</item>
        <item name="colorAccent">@color/lsq_color_white</item>
    </style>

    <!-- Base application theme. -->
    <style name="lsq_sdkBaseTheme" parent="android:Theme.Light.NoTitleBar"></style>

    <style name="lsq_sdkTheme" parent="lsq_sdkBaseTheme"></style>

    <!-- 全屏 断点续拍 -->
    <style name="lsq_record_progress_full_screen">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/tusdk_record_progress_full_screen</item><!-- progress_horizontal -->
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <!-- camera controll Option for full screen -->
    <style name="lsq_camera_OptionButton_full_screen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="lsq_audio_mixer_button">
        <item name="android:background">@drawable/tusdk_view_api_button_roundcorner</item>
        <item name="android:textColor">@color/lsq_color_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">34dp</item>
    </style>

    <declare-styleable name="TabPagerIndicator">
        <attr name="default_display_counts" format="integer"></attr>
        <attr name="normal_text_color" format="color"/>
        <attr name="high_light_text_color" format="color"/>
        <attr name="text_size" format="integer"/>
        <attr name="line_color" format="color"/>
        <attr name="line_size" format="integer"/>
        <attr name="line_width" format="dimension"></attr>
    </declare-styleable>
    <declare-styleable name="HorizontalProgressBar">
        <attr name="background_color" format="color"/>
        <attr name="progressColor" format="color"/>
        <attr name="defaultHeight" format="dimension"/>
    </declare-styleable>
    
    <declare-styleable name="TuSeekBarPressure">
    </declare-styleable>
</resources>
