<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <!--返回按钮-->
    <ImageView
        android:id="@+id/lsq_editor_component_text_font_back"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/edit_ic_return" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--左对齐-->
            <LinearLayout
                android:id="@+id/lsq_editor_text_leftalignment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/lsq__space_20"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit_text_ic_left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lsq_text_style_alignleft"
                    android:textColor="@color/lsq_color_white"
                    android:textSize="@dimen/lsq_font_size_20" />
            </LinearLayout>


            <!--居中-->
            <LinearLayout
                android:id="@+id/lsq_editor_text_centeralignment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/lsq__space_20"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit_text_ic_center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lsq_text_style_aligncenter"
                    android:textColor="@color/lsq_color_white"
                    android:textSize="@dimen/lsq_font_size_20" />
            </LinearLayout>


            <!--右对齐-->
            <LinearLayout
                android:id="@+id/lsq_editor_text_rightalignment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/lsq__space_20"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit_text_ic_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lsq_text_style_alignright"
                    android:textColor="@color/lsq_color_white"
                    android:textSize="@dimen/lsq_font_size_20" />
            </LinearLayout>

            <!--下划线-->
            <LinearLayout
                android:id="@+id/lsq_editor_text_underline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/lsq__space_20"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit_text_ic_underline" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lsq_text_style_underline"
                    android:textColor="@color/lsq_color_white"
                    android:textSize="@dimen/lsq_font_size_20" />
            </LinearLayout>

            <!--从左到右-->
            <LinearLayout
                android:id="@+id/lsq_editor_text_lefttoright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/lsq__space_20"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit_text_ic_lefttoright" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lsq_text_style_left_to_right"
                    android:textColor="@color/lsq_color_white"
                    android:textSize="@dimen/lsq_font_size_20" />
            </LinearLayout>

            <!--从右到左-->
            <LinearLayout
                android:id="@+id/lsq_editor_text_righttoleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/lsq__space_20"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit_text_ic_righttoleft" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lsq_text_style_right_to_left"
                    android:textColor="@color/lsq_color_white"
                    android:textSize="@dimen/lsq_font_size_20" />
            </LinearLayout>
        </LinearLayout>

    </HorizontalScrollView>
</LinearLayout>