<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:layout_marginEnd="20dp">

    <ImageView
        android:id="@+id/lsq_cosmetic_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/lsq_cosmetic_item_sel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/sele_ic"
        app:layout_constraintBottom_toBottomOf="@id/lsq_cosmetic_item_icon"
        app:layout_constraintLeft_toLeftOf="@id/lsq_cosmetic_item_icon"
        app:layout_constraintRight_toRightOf="@id/lsq_cosmetic_item_icon"
        app:layout_constraintTop_toTopOf="@id/lsq_cosmetic_item_icon" />

    <TextView
        android:id="@+id/lsq_cosmetic_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/lsq_alpha_white_4d"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@id/lsq_cosmetic_item_icon"
        app:layout_constraintRight_toRightOf="@id/lsq_cosmetic_item_icon"
        app:layout_constraintTop_toBottomOf="@id/lsq_cosmetic_item_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>