<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:weightSum="5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/lsq_reset_image"
            android:src="@drawable/lsq_ic_skin_nix"
            android:layout_margin="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>

        <CheckedTextView
            android:id="@+id/lsq_reset_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/lsq_beauty_name_selector"
            android:textSize="@dimen/lsq_font_size_20"
            android:visibility="visible"
            android:text="@string/lsq_beauty_skin_reset" />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/lsq_skin_beauty_image"
            android:src="@drawable/lsq_ic_skin_precision_nor"
            android:layout_margin="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>

        <CheckedTextView
            android:id="@+id/lsq_skin_beauty_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/lsq_beauty_name_selector"
            android:textSize="@dimen/lsq_font_size_20"
            android:visibility="visible"
            android:text="@string/lsq_beauty_skin_extreme"/>

    </LinearLayout>

    <View
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/lsq_circle_point" />
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/lsq_smoothing_image"
            android:src="@drawable/lsq_ic_smoothing_norl"
            android:layout_margin="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>

        <CheckedTextView
            android:id="@+id/lsq_smoothing_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/lsq_beauty_name_selector"
            android:textSize="@dimen/lsq_font_size_20"
            android:visibility="visible"
            android:text="@string/lsq_beauty_smoothing"/>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/lsq_whitening_image"
            android:src="@drawable/lsq_ic_whitening_norl"
            android:layout_margin="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>

        <CheckedTextView
            android:id="@+id/lsq_whitening_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/lsq_beauty_name_selector"
            android:textSize="@dimen/lsq_font_size_20"
            android:visibility="visible"
            android:text="@string/lsq_beauty_whitening"/>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/lsq_ruddy_image"
            android:src="@drawable/ic_sharpen_norl"
            android:layout_margin="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>

        <CheckedTextView
            android:id="@+id/lsq_ruddy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/lsq_beauty_name_selector"
            android:textSize="@dimen/lsq_font_size_20"
            android:visibility="visible"
            android:text="@string/lsq_beauty_ruddy"/>

    </LinearLayout>

</LinearLayout>