<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lsq_titleWrapView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="13dp"
        android:layout_alignParentLeft="true" >

        <TextView
            android:id="@+id/lsq_titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="@string/lsq_magic_color"
            android:textColor="@color/lsq_seekbar_drag_color"
            android:textSize="14sp" />

    </RelativeLayout>


    <org.lasque.tusdkvideodemo.views.editor.color.ColorView
        android:id="@+id/lsq_magic_color_seekView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="65dp"
        android:layout_toRightOf="@+id/lsq_titleWrapView"
        android:layout_centerVertical="true"
        layout="@layout/widget_seekbar" />

</RelativeLayout>