<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">

    <RelativeLayout
        android:id="@+id/lsq_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/lsq_record_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="录制"
                />

            <Button
                android:id="@+id/lsq_pause_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂停"
                />

            <Button
                android:id="@+id/lsq_slow_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="继续"
                />

            <Button
                android:id="@+id/lsq_fast_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快速"
                />

            <Button
                android:id="@+id/lsq_reverse_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束"
                />

            <Button
                android:id="@+id/lsq_addFilter_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加滤镜"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/lsq_switch_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="切换摄像头"
                />

            <Button
                android:id="@+id/lsq_take_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍照"
                />

            <Button
                android:id="@+id/lsq_flash_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="闪光灯"
                />

            <Button
                android:id="@+id/lsq_transcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转码"
                />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>